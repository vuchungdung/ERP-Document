@model ERP_Document.ViewModel.RoleViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Thêm nhóm quyền</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Update", "Role", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            @Html.TextBoxFor(model => model.Id, htmlAttributes: new { @style = "display:none" })
            <div class="form-group">
                <label>Tên nhóm quyền</label>
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập tên nhóm quyền mới" })
            </div>
            <div class="form-group">
                <label>Mô tả chi tiết</label>
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @placeholder = "Mô tả chi tiết" })
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="/Role/Index" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
