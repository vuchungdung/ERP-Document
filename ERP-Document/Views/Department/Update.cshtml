@model ERP_Document.ViewModel.DepartmentViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">Thêm phòng ban</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Update", "Department", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            @Html.TextBoxFor(model=>model.DepartmentId, htmlAttributes: new { @style = "display:none" })
            <div class="form-group">
                <label>Tên phòng ban</label>
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập tên phòng ban mới" })
            </div>
            <div class="form-group">
                <label>Mô tả chi tiết</label>
                @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @placeholder = "Mô tả chi tiết" })
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a href="/Department/Index" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
